{
  "name": "@egoist/tipc",
  "version": "0.3.2",
  "description": "Typesafe IPC for Electron",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "types",
    "/main",
    "/renderer"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc && tsup src/main.ts src/renderer.ts --format esm,cjs",
    "dev-main": "pnpm build --watch",
    "dev-types": "tsc --watch",
    "dev": "run-p dev-main dev-types",
    "prepublishOnly": "npm run build"
  },
  "exports": {
    "./main": {
      "types": "./main/index.d.ts",
      "require": "./dist/main.cjs",
      "default": "./dist/main.js"
    },
    "./renderer": {
      "types": "./renderer/index.d.ts",
      "require": "./dist/renderer.cjs",
      "default": "./dist/renderer.js"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@lukeed/uuid": "^2.0.1",
    "@tybys/electron-ipc-handle-invoke": "^1.0.2",
    "electron": "^6.1.12",
    "npm-run-all": "^4.1.5",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "@lukeed/uuid": "^2.0.1",
    "@tybys/electron-ipc-handle-invoke": "^1.0.2",
    "electron": "^6.1.12"
  }
}
